# ============================================
# Supabase Configuration
# ============================================

# Your Supabase project URL
SUPABASE_URL=https://your-project-id.supabase.co

# Service role key (server-side only, NEVER expose publicly)
SUPABASE_SERVICE_KEY=your-supabase-service-role-key

# Table where document chunks are stored
SUPABASE_TABLE=document_chunks


# ============================================
# Grok / xAI Configuration
# ============================================

# Grok API key
GROK_API_KEY=your-grok-api-key

# Grok model name
GROK_MODEL=grok-4-1-fast-reasoning

# Grok API endpoint
GROK_ENDPOINT=https://api.x.ai/v1/chat/completions


# ============================================
# Chunking Configuration
# ============================================

# Maximum characters per chunk
CHUNK_SIZE=1000

# Overlap between chunks
CHUNK_OVERLAP=200


# ============================================
# Handbook Generation Configuration
# ============================================

# Target word count for handbook generation
TARGET_WORDS=20000


# ============================================
# Embedding Configuration
# Must match Supabase vector dimension
# ============================================

EMBEDDING_DIM=1536
